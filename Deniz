# Initiate
import turtle as trtl
import time
import random

painter = trtl.Turtle()
painter.pensize(5)
painter.hideturtle()
painter.speed(0)
trtl.tracer(0)   


#Draw Sun
def draw_sun(x):
  # Large Yellow Circle
  painter.penup()
  painter.goto(x,120)
  painter.pendown()
  painter.begin_fill()
  painter.fillcolor("Yellow")
  painter.pencolor("Yellow")
  painter.circle(35)
  painter.end_fill()

  # Medium Orange Circle
  painter.penup()
  painter.goto(x,130)
  painter.pendown()
  painter.begin_fill()
  painter.fillcolor("Orange")
  painter.pencolor("Orange")
  painter.circle(25)
  painter.end_fill()

  # Small Red Circle
  painter.penup()
  painter.goto(x,140)
  painter.pendown()
  painter.begin_fill()
  painter.fillcolor("Red")
  painter.pencolor("Red")
  painter.circle(15)
  painter.end_fill()



#Draw Ripples
def draw_ripple(x, y, jitter):
  painter.penup()
  painter.goto(x + jitter, y)
  painter.pendown()
  painter.pencolor("White")
  painter.pensize(4)
  painter.setheading(30)
  painter.circle(20, 25)
  painter.setheading(330)
  painter.circle(20, 25)
  painter.penup()



#Draw Lake
def draw_lake():
  painter.penup()
  painter.pencolor("Blue")
  painter.goto(25, -130)
  painter.pendown()
  painter.setheading(180)
  painter.fillcolor("blue")
  painter.begin_fill()
  painter.circle(20, 180)
  painter.forward(75)
  painter.circle(20, 180)
  painter.forward(75)
  painter.end_fill()
  painter.penup()



#Main Code
x = 120       
sunspeed = -1     

while True:
  painter.clear()
  draw_lake()
  #Ripples Jitter
  r1_jitter = random.randint(-1, 1)
  r2_jitter = random.randint(-1, 1)
  r3_jitter = random.randint(-1, 1)
  #Draw Ripples
  draw_ripple(25, -155, r1_jitter)
  draw_ripple(55, -145, r2_jitter)
  draw_ripple(85, -155, r3_jitter)
  draw_sun(x)
  trtl.update()
  time.sleep(0.01)
  x += sunspeed
  #Continuous Sun Movement
  if x < -250:
    x = 250


wn = trtl.Screen()
wn.mainloop()

